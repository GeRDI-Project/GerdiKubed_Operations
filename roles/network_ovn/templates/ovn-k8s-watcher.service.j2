[Unit]
Description=Open virtual net kubernetes watcher
Documentation=https://github.com/openvswitch/ovn-kubernetes/README.md
After=apiserver.service
After=ovn-k8s-init.service

[Service]
ExecStart=/usr/local/bin/ovn-k8s-watcher \
  --overlay \
  --pidfile \
  --log-file \
  -vfile:info \
  -vconsole:emer
Restart=on-failure

[Install]
WantedBy=default.target
