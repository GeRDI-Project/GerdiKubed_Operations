LOGFILE={{ K8S_BASE_DIR }}/$(date '+%F')_nibi.log

echo "Deploying nightly builds started at $(date)" &>> $LOGFILE
cd {{ K8S_BASE_DIR }}/nibi

cd k8s-deployment
echo "  Deleting old nibi deployment at $(date)" &>> $LOGFILE
for file in $(find . -mindepth 2 -type f -name "*.yml")
do
  if echo $file | egrep -q 'elk.yml$'
  then
    continue;
  fi
  kubectl delete -f {{ K8S_BASE_DIR }}/nibi/k8s-deployment/$file 2>&1 \
    | sed 's/^/  /g' &>> $LOGFILE
done

while kubectl get po 2>&1 | grep -q "Terminating"
do
  echo "  Wait for all pods to terminate at $(date), sleep another 10 seconds" &>> $LOGFILE
  sleep 10
done

echo "  See whether deployment information changed since last run at $(date)" &>> $LOGFILE
git pull origin nibi 2>&1 | sed 's/^/  /g' &>> $LOGFILE
echo "  Redeploy nibi at $(date)" &>> $LOGFILE
for dir in $(find . -mindepth 1 -type d)
do
  kubectl create -f {{ K8S_BASE_DIR }}/nibi/k8s-deployment/$dir 2>&1 | sed 's/^/  /g' &>> $LOGFILE
done
echo "Deploying nightly builds finished at $(date)" &>> $LOGFILE
