apiVersion: v1
kind: Config
current-context: {{ K8S_DEPLOYMENT_CONTEXT }}
clusters:
  - name: {{ K8S_DEPLOYMENT_CONTEXT }}
    cluster:
      server: https://{{ K8S_MASTER_IP }}:443/
      certificate-authority: {{ K8S_CERT_FILES_DIR }}/ca.crt.pem
contexts:
  - context:
      cluster: {{ K8S_DEPLOYMENT_CONTEXT }}
      user: kubelet
    name: {{ K8S_DEPLOYMENT_CONTEXT }}
users:
  - name: kubelet
    user:
      client-certificate: "{{ K8S_CERT_FILES_DIR }}/admin.crt.pem"
      client-key: "{{ K8S_KEY_FILES_DIR }}/admin.key"
