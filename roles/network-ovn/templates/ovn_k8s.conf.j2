[default]
mtu=1500
conntrack-zone=64321

[kubernetes]
apiserver=https://{{ internalIP }}:443
token={{ OVN_API_TOKEN }}
cacert={{ K8S_CERT_FILES_DIR }}/ca.crt.pem

[logging]
loglevel=4
logfile=/var/log/ovnkube.log

[cni]
conf-dir=/etc/cni/net.d
plugin=ovn-k8s-cni-overlay

[ovnnorth]
address=tcp://{{ internalIP }}:6641

[ovnsouth]
address=tcp://{{ internalIP }}:6642
